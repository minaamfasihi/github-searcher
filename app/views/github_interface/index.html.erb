<%= form_tag(root_path, method: "get") do %>
  <%= label_tag(:query, "Search: ") %>
  <%= text_field_tag(:query) %>
  <%= select_tag :search_type, options_for_select(SEARCH_TYPE) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
	<% if @repos.present? %>
		<% @repos.each do |repo| %>
			<%= link_to repo.url do %>
				<%= repo.full_name %>
			<% end %>
		<% end %>
	<% end %>
</ul>
